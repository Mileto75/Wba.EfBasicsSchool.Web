@model CoursesInfoViewModel

<div class="row">
    <div class="col col-lg-3 mx-auto">
        <div class="card" style="width: 18rem;">
            <!--tips: add .text-center,.text-right to the .card to change card text alignment-->
            <div class="card-body">
                <h5 class="card-title">@Model.Course.Value</h5>
                <h6 class="card-subtitle mb-2 text-muted"></h6>
                
                <a asp-controller="Courses" asp-action="Index" class="btn btn-primary">Back</a>
            </div>
        </div>
    </div>
</div>